<%= link_to "Back", "/stories"  %>

<% if current_user %>
<div class="row">
  <div class="col-md-2">
  </div>

  <div class="col-md-8">
  <h2>Submit a story</h2>
  <br/>
  <%= form_tag stories_url do %>
  
  <div class="row">
    <div class="col-md-1">
      <%= label_tag(:title, "Title:") %>
    </div>
    <div class="col-md-11">
      <%= text_field_tag(:title, "", size: "70x1") %>
    </div>
    <br/><br/>
  </div>
  <div class="row">
    <div class="col-md-1">
      <%= label_tag(:url, "Url:") %>
    </div>
    <div class="col-md-11">
      <%= text_field_tag(:url, "", size: "70x1") %>
    </div>
    <br/><br/>
  </div>
  <br/>
  <%= submit_tag("Submit", class: "btn btn-primary") %>
  <% end %>
  </div>

  <div class="col-md-2">
  </div>
</div>
<% else %>
<br/><br/><h3>Sorry, you must be logged in to post a story.</h3>
<% end %>


